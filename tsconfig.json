{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src/",
		"esModuleInterop": true,
		"jsx": "react-native",
		"module": "esnext",
		"moduleResolution": "bundler",
		"noImplicitAny": false,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"paths": {
			"$/*": ["./stuff/*"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext"
	},
	"include": [
		"src/**/*",
		"scripts/**/*",
		"lang/**/*",
		"declarations",
		"node_modules/vendetta-types/defs.d.ts"
	]
}
